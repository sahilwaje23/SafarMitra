<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Signup Form</title>
  </head>
  <body>
    <form
      action="http://localhost:8000/signup"
      method="POST"
      enctype="multipart/form-data"
    >
      <h1>Signup Form</h1>

      <label for="fullName">Full Name:</label>
      <input type="text" id="fullName" name="fullName" required />
      <br />

      <label for="email">Email:</label>
      <input type="email" id="email" name="email" required />
      <br />

      <label for="password">Password:</label>
      <input type="password" id="password" name="password" required />
      <br />

      <label for="mobileNo">Mobile Number:</label>
      <input type="number" id="mobileNo" name="mobileNo" required />
      <br />

      <label for="gender">Gender:</label>
      <select id="gender" name="gender" required>
        <option value="Male">Male</option>
        <option value="Female">Female</option>
      </select>
      <br />

      <label for="profileImageUrl">Profile Image:</label>
      <input type="file" id="profileImageUrl" name="profileImageUrl" required />
      <br />

      <label for="idImageUrl">ID Image:</label>
      <input type="file" id="idImageUrl" name="idImageUrl" required />
      <br />

      <button type="submit">Submit</button>
    </form>
  </body>
</html>
